@model LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "Đăng nhập";
}
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<section id="login-section" class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #f4f6f9;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow p-4">
                    <!-- Logo section -->
                    <a asp-action="Index" asp-controller="Home" class="col">
                        <img src="https://st.depositphotos.com/57803962/56463/v/450/depositphotos_564635356-stock-illustration-fast-food-icon-vector-illustration.jpg" alt="E-Shopper Logo" style="width: 70px; height: 60px; margin-bottom: 20px;" />
                    </a>

                    <h2 class="mb-4 text-center">Đăng nhập</h2>

                    <!-- Login form -->
                    <form asp-action="Login" asp-controller="Account">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label for="username">Tên đăng nhập</label>
                            <input asp-for="Username" class="form-control" id="username" placeholder="Nhập tên đăng nhập" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="password">Mật khẩu</label>
                            <input asp-for="Password" class="form-control" id="password" type="password" placeholder="Nhập mật khẩu" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <button class="btn btn-primary w-100">Đăng nhập</button>
                        </div>

                        <div class="text-center">
                            <a asp-action="Create" asp-controller="Account" class="text-primary">Đăng ký tài khoản mới</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
