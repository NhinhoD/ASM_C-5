@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["title"] = "Danh sách vai trò";
}

<head>
    <style>
        /* Custom styles */
        .table th, .table td {
            text-align: center;
            vertical-align: middle;
            word-wrap: break-word; /* Gói từ dài */
        }

        .table th {
            font-weight: bold;
            text-transform: uppercase;
        }

        .table td {
            vertical-align: middle;
        }

        .text-success {
            color: #28a745;
        }

        .text-danger {
            color: #dc3545;
        }

        .btn-sm {
            padding: 6px 12px;
            font-size: 14px;
        }

        .pagination a {
            padding: 8px 16px;
            text-decoration: none;
            color: #007bff;
        }

            .pagination a:hover {
                background-color: #f1f1f1;
            }

        .btn-group {
            display: flex;
            justify-content: center;
            gap: 8px;
        }

        .table-responsive {
            overflow-x: auto;
        }

        /* Thêm khoảng cách và màu sắc cho nút Thêm vai trò */
        .btn-success {
            background-color: #28a745;
            color: white;
        }

            .btn-success:hover {
                background-color: #218838;
            }
    </style>
</head>

<div class="container mt-4">
    <h3 class="text-center text-primary mb-4">Danh sách vai trò</h3>

    <div class="mb-3 text-end">
        <a asp-action="Create" asp-controller="Role" class="btn btn-success btn-sm">Thêm vai trò</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" id="myTable">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Tên vai trò</th>
                    <th scope="col">Quản lý</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Role" asp-route-Id="@item.Id">Sửa</a>
                                <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Role" asp-route-Id="@item.Id">Xóa</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
